[
  // Vistas de depuración directas
  {
    "key": "alt+v",
    "command": "workbench.debug.action.focusVariablesView",
    "when": "inDebugMode"
  },
  {
    "key": "alt+c",
    "command": "workbench.debug.action.focusCallStackView",
    "when": "inDebugMode"
  },
  {
    "key": "alt+w",
    "command": "workbench.debug.action.focusWatchView",
    "when": "inDebugMode"
  },
  {
    "key": "alt+b",
    "command": "workbench.debug.action.focusBreakpointsView",
    "when": "inDebugMode"
  },

  // Ayuda y modos accesibles
  {
    "key": "ctrl+alt+a",
    "command": "workbench.action.openAccessibilityHelp"
  },
  {
    "key": "ctrl+alt+t",
    "command": "accessibility.toggleScreenReaderOptimized"
  },
  {
    "key": "ctrl+alt+o",
    "command": "accessibility.showAccessibleView"
  },

  // Nuevos keybindings para productividad
  // REST Client - Ejecutar request (solo en archivos .http)
  {
    "key": "ctrl+alt+r",
    "command": "rest-client.request",
    "when": "editorTextFocus && resourceExtname == '.http'"
  },

  // Formatear documento rápido
  {
    "key": "ctrl+alt+f",
    "command": "editor.action.formatDocument"
  },

  // Navegar a definición (útil con todos tus lenguajes)
  {
    "key": "ctrl+alt+d",
    "command": "editor.action.revealDefinition"
  },

  // Toggle entre terminal y editor
  {
    "key": "ctrl+alt+`",
    "command": "workbench.action.terminal.focus",
    "when": "!terminalFocus"
  },
  {
    "key": "ctrl+alt+`",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  }
]
